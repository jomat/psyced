        sTextPath(query["layout"] /* || MYNICK */, query["lang"], "html");
	if (!noprocess && (!qs || query["scratchpad"])) {
		string rand, buf, len;
// microscopic wiki functionality .. cheap imitation of tobi's save.pike
//
// things one could add:
